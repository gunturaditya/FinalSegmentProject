@model Client.ViewModel.RegisterStudentVM

@{
    ViewData["Title"] = "Register";
    Layout = "AuthLayout";
}
<div class="col-lg-8">
    <div class="card my-5">
        <div class="text-center p-3">
            <h1 class="h4 text-gray-900 mb-4">Register Student</h1>
        </div>
        <div class="card-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="NIM" class="form-control form-control-user" placeholder="NIM"/>
                            <span asp-validation-for="NIM" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control form-control-user" placeholder="First Name"/>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control form-control-user" placeholder="Email"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Major" class="form-control form-control-user" placeholder="Major" />
                            <span asp-validation-for="Major" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Degree" class="form-control" placeholder="Degree" />
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="UniversityName" class="form-control form-control-user" placeholder="University Name" />
                            <span asp-validation-for="UniversityName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="LastName" class="form-control form-control-user" placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="BirthDate" class="form-control form-control-user" placeholder="Birth Date"/>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="form-control form-control-user" placeholder="Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="GPA" class="form-control form-control-user" placeholder="GPA"/>
                            <span asp-validation-for="GPA" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="Password" class="form-control form-control-user" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
