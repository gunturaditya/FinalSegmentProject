@{
    Layout = "LayoutHrd";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card my-3">
                <div class="card-header bg-primary text-light">
                    Data Employee
                </div>
                <div class="card-body">
                    <a asp-controller="HRD" asp-action="CreateEmployee" class="btn btn-secondary ml-4 mt-2 mb-2"> Add Employee</a>
                    <div class="table-responsive">
                        <table id="tableEmployee" class="table table-striped table-hover table-bordered table-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nik</th>
                                    <th>Fullname</th>
                                    <th>Email</th>
                                    <th>Universitas</th>
                                    <th>Major</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card my-3">
                <div class="card-header bg-primary text-light">
                    Data Student
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                <table id="tableGetStudent" class="table table-striped table-hover table-bordered table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>Nim</th>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Universitas</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbStudent">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


        <div class="modal fade" id="ModalDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header ">

                        <b><h5 class="modal-title text-center" id="exampleModalLabel">Profil Student</h5></b>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row">

                            <img src="~/Image/user.png" class="col-md-5 p-0" style="width:240px;height:300px" />

                            <div class="col-md-6 ">
                                <div class="mb-2">
                                    <h3 class="text-center" id="fullname"></h3>
                                </div>
                                <div class="mb-2">
                                    <span>NIM : </span> <span id="Nim"></span>
                                </div>
                                <div class="mb-2">
                                    <span>Email : </span> <span id="email"></span>
                                </div>
                                <div class="mb-2">
                                    <span>Universitas : </span> <span id="universias"></span>
                                </div>
                                <div class="mb-2">
                                    <span>Major : </span> <span id="Major"></span>
                                </div>
                                <div class="mb-2">
                                    <span>Degree : </span> <span id="degree"></span>
                                </div>
                                <div class="mb-2">
                                    <span>Gpa : </span> <span id="Gpa"></span>
                                </div>
                                <div class="mb-2">
                                    <span>Start Date : </span> <span id="startdate"></span>
                                </div>
                                <span>End Date : </span> <span id="enddate"></span>
                            </div>
                        </div>
                    </div>


                    <div class="modal-footer justify-content-md-start ">

                        <button type="button" class="btn btn-secondary col-md-2 " data-bs-dismiss="modal">Close</button>
                        <div class="col-md-7"></div>

                    </div>
                </div>
            </div>
        </div>




@section Scripts{
    <script src="~/js/Hrd.js"></script>
}
